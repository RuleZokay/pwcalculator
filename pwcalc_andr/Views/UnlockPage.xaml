<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="pwcalc_andr.UnlockPage">


    <ContentPage.Content>
        
       <StackLayout  Padding = "30,30,30,30" HorizontalOptions="Center">
            <Label Text="E-Mail" XAlign="Center"></Label>
            <Entry Placeholder="Bitte E-Mail eingeben" HorizontalTextAlignment="Center" Keyboard="Email"></Entry>
            <Button Text ="App Freischalten" Clicked="unlock_Click"></Button>
       <Grid Padding="0,20,0,0" VerticalOptions="Center">
       <Grid.ColumnDefinitions>
        <ColumnDefinition Width="50" />
       </Grid.ColumnDefinitions>
                <Image x:Name="CrossImage"   Source="close2.png" WidthRequest="32" HeightRequest="32" Grid.Column ="0"/>
       <Label x:Name="ImageText" YAlign="Center" Text= "Die App ist nicht freigeschaltet"  Grid.Column ="1"></Label>
            </Grid>     
       </StackLayout>
            
	</ContentPage.Content>
    </ContentPage>
